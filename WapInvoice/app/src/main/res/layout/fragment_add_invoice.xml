<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login">
        <TableRow
            android:layout_marginTop="10pt"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Division :"
                android:id="@+id/div"
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText"
                android:layout_marginLeft="@dimen/margin_left"/>

            <Spinner
                android:id="@+id/spnDiv"
                android:layout_width="@dimen/testIDSpinnerWidth"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>
        </TableRow>
        <TableRow
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Sales Rep:"
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText"
                android:layout_marginLeft="@dimen/margin_left"/>

            <Spinner
                android:id="@+id/spnRep"
                android:layout_width="@dimen/testIDSpinnerWidth"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>
        </TableRow>
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Customer:"
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText"
                android:layout_marginLeft="@dimen/margin_left"/>

            <AutoCompleteTextView
                android:id="@+id/autoCust"
                android:layout_width="@dimen/testIDSpinnerWidth"
                android:layout_height="35dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:completionThreshold="2"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="@android:color/black"
                android:hint="  Enter Customer Name"
                android:ems="10"/>

        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login">
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Date:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <EditText
                android:id="@+id/date"
                android:layout_width="@dimen/editText"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:ems="10"
                android:enabled="false"
                android:inputType="date" >
            </EditText>
            <ImageView
                android:id="@+id/calBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date"
                android:layout_toRightOf="@+id/date"
                    android:enabled="false"
                android:layout_marginLeft="10px"
                android:cropToPadding="true"
                android:src="@drawable/calandar" />
            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Payment:"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />
            <Spinner
                android:id="@+id/spnpmnt"
                android:layout_width="@dimen/rightEditText"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>
        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login"
        android:paddingBottom="5dp">
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Remark:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <Spinner
                android:id="@+id/spnRemk"
                android:layout_width="@dimen/SpecialEditText"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>
        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login"
        android:paddingBottom="15dp">
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Price Mode:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <Spinner
                android:id="@+id/spnPriceM"
                android:layout_width="@dimen/SpecialEditText"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>
        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center_vertical"
            android:paddingTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@color/bg_login"
        >
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Item:"
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText"
                android:layout_marginLeft="@dimen/margin_left"/>
            <Spinner
                android:id="@+id/autoItem"
                android:layout_width="@dimen/testIDSpinnerWidth"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>

        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login">
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Unit:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <Spinner
                android:id="@+id/spnUnit"
                android:layout_width="@dimen/editText"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dropdown"/>
            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="S Price:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />
            <EditText
                android:id="@+id/sPrice"
                android:layout_width="@dimen/rightEditText"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:inputType="numberDecimal"
                android:ems="10" />
        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login"
        android:paddingBottom="5dp">
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="C Price:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <EditText
                android:id="@+id/cPrice"
                android:layout_width="@dimen/editText"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:inputType="numberDecimal"
                android:ems="10" />
            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Quantity:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="@dimen/rightEditText"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:ems="10" />
        </TableRow>
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Discount:"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <EditText
                android:id="@+id/discount"
                android:layout_width="@dimen/editText"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:inputType="numberDecimal"
                android:ems="10" />
            <TextView
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="Bonus:"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText" />

            <EditText
                android:id="@+id/bonus"
                android:layout_width="@dimen/rightEditText"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:visibility="invisible"
                android:inputType="numberDecimal"
                android:ems="10" />
        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@color/bg_login"
        >
        <TableRow
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total Value:"
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText"
                android:layout_marginLeft="@dimen/margin_left"/>

            <EditText
                android:id="@+id/totValue"
                android:layout_width="@dimen/testIDTotValueWidth"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:enabled="false"
                android:ems="10" />
            <TextView
                android:text="In Stock:"
                android:layout_width="@dimen/IndiSpWithtextWidth"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="@color/white"
                android:textSize="@dimen/normalText"/>

            <EditText
                android:id="@+id/inStock"
                android:layout_width="@dimen/editTextQty"
                android:textColor="@color/black"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text"
                android:paddingLeft="5dp"
                android:enabled="false"
                android:ems="10" />
        </TableRow>
    </TableLayout>
    <TableLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="20"
        android:gravity="center"
        android:background="@color/bg_login"
        android:orientation="vertical" >

    <Button
        android:id="@+id/btn_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@color/green_500"
        android:text="Add Item"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@color/change_bt"
        android:text="Next To Save"
        android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>